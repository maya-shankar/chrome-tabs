{
  "manifest_version": 2,

  "name": "Sort Active Tabs",
  "description": "Adds a browser action showing which tabs are active in a given window.",
  "version": "1.0",
  "options_page": "options.html",
  "permissions": [
    "tabs", "chrome://favicon/*", "storage"
  ],
  "background": {
    "page": "sortTabs.html"
  },
  "browser_action": {
      "default_title": "Show/Sort Tabs in this Window",
      "default_icon": "tab_icon.png",
      "default_popup": "sortTabs.html"
  }
}
